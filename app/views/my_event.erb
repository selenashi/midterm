<!DOCTYPE html>
<html lang="en">

<head></head>

<body>

    <!-- Page Content -->
    <div class="container">

        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                </h1>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">My Events 
                    <small> You are currently attending <%= @user_events.count %> Events </small>
                </h1>
            </div>
        </div>
        
        <!-- /.row -->
        <!-- Events -->
    <% @user_events.each do |event| %> 
    <div class="row">
        <div class="col-md-7">
            <a href="#">
                <img class="img-responsive" src="<%= event.image_url %>" alt="">
            </a>
        </div>
        <div class="col-md-5">
            <h3><%= event.name %></h3>
            <h4><%= event.date %><br><%= event.location %></h4>
            
            <% if event.min_required - event.num_user <= 0 %>
            <h3 class="text-success"> Discount Qualified </h3>
            <% else %>
            <h3 class="text-danger">Until Discount <%= event.min_required - event.num_user %>
            <% end %></h3>
            <a class="btn btn-primary" href="registration/<%= event.id %>/remove">Remove Event <span class="glyphicon glyphicon-chevron-right"></span></a>
        </div>
    </div>

    <hr>

    <% end %>

    </div>
    <!-- /.container -->

    <!-- jQuery -->
    <script src="js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>

</body>

</html>




