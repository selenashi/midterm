<!DOCTYPE html>
<html lang="en">

<head>
</head>

<body>

    <!-- Page Content -->
    <div class="container">

        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                </h1>
            </div>
        </div>

<div class="container">


        <div class="row">

            <div class="col-lg-12">
                <h1 class="page-header">My Events 
                    <small> You are currently attending <%= @user_events.count %> Events </small>
                </h1>
            </div>
        </div>
        
        <!-- /.row -->
        <!-- Events -->
    <% @user_events.each do |event| %> 
    <div class="row">
          <div class="col-md-7">
              <a href="#">
                    <img class="img-responsive" src="<%= event.image_url %>" alt="">
                </a>
            </div>
            <div class="col-md-5">
                <h3><%= event.name %></h3>
                <h4><%= event.date %></h4>
                <h3 class="text-danger">Until Discount<%= event.min_required - event.num_user %></h3>
                <p></p>
                  <a class="btn btn-primary" href="registration/<%= event.id %>/remove">Remove Event <span class="glyphicon glyphicon-chevron-right"></span></a>
            </div>
        </div>
    </div>
    <% end %>



